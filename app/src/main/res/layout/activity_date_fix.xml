<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ActivityDateFix">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:layout_width="200sp"
        android:layout_gravity="center"
        android:layout_height="130sp"
        android:background="#e0e0e0"
        app:corner_radius="18sp"
        android:layout_margin="8sp"
        android:elevation="10sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imvDoctorProfile"
            android:src="@drawable/doc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ডাঃ ঊবায়দুল কাদির উজ্জ্বল"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_alignBottom="@+id/imvDoctorProfile"
            android:background="#88333639"
            />
    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:text="ফি : ৫৫০ টাকা . "
        android:layout_gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="দিন"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:entries="@array/chembers"
            ></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="সময়"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTime"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="15sp"
        android:entries="@array/Time"
        ></Spinner>
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        android:layout_gravity="center"
        app:cardElevation="10dp"
        android:id="@+id/cvSerial"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="সিরিয়াল দিন"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>