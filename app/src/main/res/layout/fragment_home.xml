<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Fragment.HomeFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230sp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/cover">

                    <ImageView
                        android:layout_width="220sp"
                        android:layout_height="170sp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="আমাদের সেবাসমূহ"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="5sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="215sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135sp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10sp"
                        >

                        <android.support.v7.widget.CardView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="3sp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50sp"
                                    android:layout_height="50sp"
                                    android:src="@drawable/apointment"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/imv1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="বিশেষজ্ঞ ডাক্তার"
                                    android:layout_below="@+id/imv1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/btn1"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="3sp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <ImageView
                                    android:layout_width="50sp"
                                    android:layout_height="50sp"
                                    android:src="@drawable/blood"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/imv2"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="রক্ত লাগবে"
                                    android:layout_below="@+id/imv2"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/btn2"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135sp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10sp">

                        <android.support.v7.widget.CardView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="3sp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50sp"
                                    android:layout_height="50sp"
                                    android:src="@drawable/ambulance"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/imv3"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="অ্যাাম্বুলেন্স"
                                    android:layout_below="@+id/imv3"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/btn3"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="3sp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50sp"
                                    android:layout_height="50sp"
                                    android:src="@drawable/profile"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/imv4"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Profile"
                                    android:layout_below="@+id/imv4"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/btn4"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135sp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10sp">

                        <android.support.v7.widget.CardView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="3sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50sp"
                                    android:layout_height="50sp"
                                    android:src="@drawable/profile"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/imv5"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Profile"
                                    android:layout_below="@+id/imv5"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/btn5"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="3sp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50sp"
                                    android:layout_height="50sp"
                                    android:src="@drawable/profile"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/imv6"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Profile"
                                    android:layout_below="@+id/imv6"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:id="@+id/btn6"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>